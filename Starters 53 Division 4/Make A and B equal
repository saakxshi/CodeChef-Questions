#include <iostream>
using namespace std;


int main()
{
    int t,n;
    cin >> t;
    for (int i = 1; i <= t; i++)
    {
        cin >> n ;
        int a[n] , b[n] ;
        long long asum=0,bsum=0;
        for(int k=0;k<n;k++)
        {
            cin>> a[k];
        }
        for(int l=0;l<n;l++)
        {
            cin>> b[l];
        }
        for(int m=0;m<n;m++){
             if(a[m]<=b[m]){
                 asum+= abs(a[m]-b[m]);
             }
             else{
                 bsum+=abs(a[m]-b[m]);
             }
        }
        if(asum==bsum){
            cout<<asum<<endl;
        }
        else{
            cout<<"-1"<<endl;
        }
    
        
    }
  
    
    return 0;
}
